@using SchoolProject.ViewModels
@model PaginatedList<ClassScheduleViewModel>
@{
    ViewData["Title"] = "Gestión de Horarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["BodyClass"] = "dashboard-page";
}

<div class="dashboard-container">
    <!-- Header del Dashboard -->
    <div class="dashboard-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="dashboard-title">
                        <i class="bi bi-calendar3"></i> Gestión de Horarios
                    </h1>
                    <p class="dashboard-subtitle">Administra los horarios de clases del colegio</p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="dashboard-date">
                        <i class="bi bi-calendar-check"></i>
                        <span id="currentDate"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenedor Principal -->
    <div class="container-fluid px-4 py-4">
        <!-- Mensajes de éxito/error -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="dashboard-content-card">
            <!-- Barra de Herramientas -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="section-header">
                        <h2 class="section-title">
                            <i class="bi bi-list-ul"></i> Lista de Horarios
                        </h2>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <button class="btn btn-primary-custom" data-bs-toggle="modal" data-bs-target="#scheduleModal">
                        <i class="bi bi-plus-circle-fill"></i> Nuevo Horario
                    </button>
                </div>
            </div>

            <!-- Tabla de Horarios -->
            <div class="table-responsive">
                <table class="table table-hover" id="schedulesTable">
                    <thead class="table-light">
                        <tr>
                            <th>Curso</th>
                            <th>Profesor</th>
                            <th>Día</th>
                            <th>Hora Inicio</th>
                            <th>Hora Fin</th>
                            <th>Aula</th>
                            <th>Periodo</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var schedule in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@schedule.CourseName</strong><br />
                                    <small class="text-muted">@schedule.CourseCode</small>
                                </td>
                                <td>@schedule.ProfessorName</td>
                                <td><span class="badge bg-primary">@schedule.Day</span></td>
                                <td>@schedule.StartTimeDisplay</td>
                                <td>@schedule.EndTimeDisplay</td>
                                <td><span class="badge bg-info">@schedule.Classroom</span></td>
                                <td>@schedule.Period</td>
                                <td>
                                    @if (schedule.IsActive)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary edit-btn"
                                            data-id="@schedule.ClassScheduleId"
                                            data-courseid="@schedule.CourseId"
                                            data-coursename="@schedule.CourseName"
                                            data-day="@schedule.Day"
                                            data-starttime="@schedule.StartTime.ToString("HH:mm")"
                                            data-endtime="@schedule.EndTime.ToString("HH:mm")"
                                            data-classroom="@schedule.Classroom"
                                            data-period="@schedule.Period"
                                            data-isactive="@schedule.IsActive.ToString().ToLower()">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger delete-btn"
                                            data-id="@schedule.ClassScheduleId"
                                            data-course="@schedule.CourseName"
                                            data-day="@schedule.Day">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }

            <div class="row mt-4">
                <div class="col-12 d-flex justify-content-between align-items-center">
                    <span class="text-muted">
                        Página @Model.PageIndex de @Model.TotalPages
                    </span>

                    <div>
                        <a asp-action="ClassSchedules"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           class="btn btn-sm btn-outline-secondary @prevDisabled">
                            Anterior
                        </a>

                        <a asp-action="ClassSchedules"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           class="btn btn-sm btn-outline-secondary @nextDisabled">
                            Siguiente
                        </a>
                    </div>
                </div>
            </div>

            <!-- Mensaje cuando no hay horarios -->
            @if (!Model.Any())
            {
                <div id="noSchedulesMessage" class="text-center py-5">
                    <i class="bi bi-calendar3 display-1 text-muted"></i>
                    <h3 class="mt-3 text-muted">No hay horarios registrados</h3>
                    <p class="text-muted">Comienza creando el primer horario de clases.</p>
                    <button class="btn btn-primary-custom mt-3" data-bs-toggle="modal" data-bs-target="#scheduleModal">
                        <i class="bi bi-plus-circle-fill"></i> Crear Primer Horario
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<!-- ======================== MODAL PARA CREAR HORARIO ======================== -->
<div class="modal fade" id="scheduleModal" tabindex="-1" aria-labelledby="scheduleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="scheduleModalLabel">
                    <i class="bi bi-plus-circle-fill"></i> Nuevo Horario
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="scheduleForm" asp-controller="ClassSchedules" asp-action="CreateClassSchedule" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="row">
                        <!-- Selección de Curso -->
                        <div class="col-md-6">
                            <h6 class="section-title mb-3">
                                <i class="bi bi-journal-text"></i> Información del Curso
                            </h6>

                            <div class="mb-3">
                                <label for="CourseId" class="form-label required-field">Curso</label>
                                <select class="form-select" id="CourseId" name="CourseId" required>
                                    <option value="">Seleccionar Curso</option>
                                    @foreach (var course in ViewBag.Courses)
                                    {
                                        <option value="@course.CourseId">
                                            @course.Code - @course.Name (@course.ProfessorName)
                                        </option>
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="Day" class="form-label required-field">Día</label>
                                <select class="form-select" id="Day" name="Day" required>
                                    <option value="">Seleccionar Día</option>
                                    <option value="Lunes">Lunes</option>
                                    <option value="Martes">Martes</option>
                                    <option value="Miércoles">Miércoles</option>
                                    <option value="Jueves">Jueves</option>
                                    <option value="Viernes">Viernes</option>
                                    <option value="Sábado">Sábado</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="Classroom" class="form-label required-field">Aula</label>
                                <input type="text" class="form-control" id="Classroom" name="Classroom"
                                       required maxlength="20" placeholder="Ej: A-101">
                            </div>
                        </div>

                        <!-- Configuración de Horario -->
                        <div class="col-md-6">
                            <h6 class="section-title mb-3">
                                <i class="bi bi-clock"></i> Horario de Clase
                            </h6>

                            <div class="mb-3">
                                <label for="StartTime" class="form-label required-field">Hora de Inicio</label>
                                <input type="time" class="form-control" id="StartTime" name="StartTime" required>
                            </div>

                            <div class="mb-3">
                                <label for="EndTime" class="form-label required-field">Hora de Fin</label>
                                <input type="time" class="form-control" id="EndTime" name="EndTime" required>
                            </div>

                            <div class="mb-3">
                                <label for="Period" class="form-label">Periodo</label>
                                <input type="text" class="form-control" id="Period" name="Period"
                                       maxlength="20" placeholder="Ej: 2025-1">
                                <div class="form-text">Opcional</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Guardar Horario
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- ======================== MODAL PARA EDITAR HORARIO ======================== -->
<div class="modal fade" id="editScheduleModal" tabindex="-1" aria-labelledby="editScheduleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="editScheduleModalLabel">
                    <i class="bi bi-pencil-fill"></i> Editar Horario
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editScheduleForm" asp-controller="ClassSchedules" asp-action="UpdateClassSchedule" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="EditClassScheduleId" name="ClassScheduleId" value="0" />
                <input type="hidden" id="EditCourseIdHidden" name="CourseId" value="0" />

                <div class="modal-body">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle-fill"></i>
                        <strong>Modo Edición:</strong> Puedes modificar <strong>día, horario, aula y periodo</strong>.
                    </div>

                    <div class="row">
                        <!-- Información del Curso (SOLO LECTURA) -->
                        <div class="col-md-6">
                            <h6 class="section-title mb-3">
                                <i class="bi bi-journal-text"></i> Información del Curso
                            </h6>

                            <div class="mb-3">
                                <label class="form-label">Curso</label>
                                <input type="text" class="form-control bg-light" id="EditCourseName" readonly>
                            </div>

                            <div class="mb-3">
                                <label for="EditDay" class="form-label required-field">
                                    <i class="bi bi-pencil-fill text-primary"></i> Día
                                </label>
                                <select class="form-select border-primary border-2" id="EditDay" name="Day" required>
                                    <option value="">Seleccionar Día</option>
                                    <option value="Lunes">Lunes</option>
                                    <option value="Martes">Martes</option>
                                    <option value="Miércoles">Miércoles</option>
                                    <option value="Jueves">Jueves</option>
                                    <option value="Viernes">Viernes</option>
                                    <option value="Sábado">Sábado</option>
                                </select>
                                <div class="form-text text-primary">
                                    <strong>Este campo es editable</strong>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="EditClassroom" class="form-label required-field">
                                    <i class="bi bi-pencil-fill text-primary"></i> Aula
                                </label>
                                <input type="text" class="form-control border-primary border-2" id="EditClassroom" name="Classroom"
                                       required maxlength="20">
                                <div class="form-text text-primary">
                                    <strong>Este campo es editable</strong>
                                </div>
                            </div>
                        </div>

                        <!-- Configuración de Horario (EDITABLE) -->
                        <div class="col-md-6">
                            <h6 class="section-title mb-3">
                                <i class="bi bi-clock"></i> Horario de Clase
                            </h6>

                            <div class="mb-3">
                                <label for="EditStartTime" class="form-label required-field">
                                    <i class="bi bi-pencil-fill text-primary"></i> Hora de Inicio
                                </label>
                                <input type="time" class="form-control border-primary border-2" id="EditStartTime" name="StartTime" required>
                                <div class="form-text text-primary">
                                    <strong>Este campo es editable</strong>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="EditEndTime" class="form-label required-field">
                                    <i class="bi bi-pencil-fill text-primary"></i> Hora de Fin
                                </label>
                                <input type="time" class="form-control border-primary border-2" id="EditEndTime" name="EndTime" required>
                                <div class="form-text text-primary">
                                    <strong>Este campo es editable</strong>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="EditPeriod" class="form-label">
                                    <i class="bi bi-pencil-fill text-primary"></i> Periodo
                                </label>
                                <input type="text" class="form-control border-primary border-2" id="EditPeriod" name="Period" maxlength="20">
                                <div class="form-text text-primary">
                                    <strong>Este campo es editable</strong>
                                </div>
                            </div>

                            <div class="mb-3 form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="EditIsActive" name="IsActive" value="true">
                                <label class="form-check-label" for="EditIsActive">
                                    <i class="bi bi-pencil-fill text-primary"></i> <strong>Horario Activo</strong>
                                </label>
                                <input type="hidden" name="IsActive" value="false">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-lg"></i> Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Actualizar Horario
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de Confirmación para Eliminar -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="deleteForm" asp-controller="ClassSchedules" asp-action="DeleteClassSchedule" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas <strong>eliminar</strong> el horario de:</p>
                    <p class="text-center">
                        <strong class="fs-6" id="scheduleInfoToDelete"></strong>
                    </p>
                    <input type="hidden" id="deleteScheduleId" name="id" value="">
                    <div class="alert alert-warning">
                        <i class="bi bi-info-circle"></i>
                        <small>El horario será marcado como <strong>inactivo</strong> pero sus datos se conservarán en el sistema.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-lg"></i> Cancelar
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-check-lg"></i> Sí, Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/classschedules.js"></script>
}
