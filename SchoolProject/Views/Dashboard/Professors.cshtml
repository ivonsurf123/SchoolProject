@using SchoolProject.ViewModels
@model PaginatedList<ProfessorViewModel>
@{
    ViewData["Title"] = "Gestión de Profesores";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["BodyClass"] = "dashboard-page";
}

<div class="dashboard-container">
    <!-- Header del Dashboard -->
    <div class="dashboard-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="dashboard-title">
                        <i class="bi bi-person-video3"></i> Gestión de Profesores
                    </h1>
                    <p class="dashboard-subtitle">Administra la información de los profesores del colegio</p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="dashboard-date">
                        <i class="bi bi-calendar-check"></i>
                        <span id="currentDate"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenedor Principal -->
    <div class="container-fluid px-4 py-4">
        <div class="dashboard-content-card">
            <!-- Barra de Herramientas -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="section-header">
                        <h2 class="section-title">
                            <i class="bi bi-list-ul"></i> Lista de Profesores
                        </h2>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <button class="btn btn-primary-custom" data-bs-toggle="modal" data-bs-target="#professorModal">
                        <i class="bi bi-person-plus-fill"></i> Nuevo Profesor
                    </button>
                </div>
            </div>

            <!-- Tabla de Profesores -->
            <div class="table-responsive">
                <table class="table table-hover" id="professorsTable">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Nombre Completo</th>
                            <th>Email</th>
                            <th>Teléfono</th>
                            <th>Departamento</th>
                            <th>Fecha Contratación</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var professor in Model)
                        {
                            <tr>
                                <td>@professor.Code</td>
                                <td>@professor.Name @professor.LastName</td>
                                <td>@professor.Email</td>
                                <td>@professor.Phone</td>
                                <td>@professor.Department</td>
                                <td>@professor.HiringDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (professor.IsActive)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary edit-btn"
                                            data-id="@professor.ProfessorId"
                                            data-code="@professor.Code"
                                            data-name="@professor.Name"
                                            data-lastname="@professor.LastName"
                                            data-email="@professor.Email"
                                            data-phone="@professor.Phone"
                                            data-department="@professor.Department"
                                            data-hiringdate="@professor.HiringDate.ToString("yyyy-MM-dd")"
                                            data-isactive="@professor.IsActive.ToString().ToLower()">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger delete-btn"
                                            data-id="@professor.ProfessorId"
                                            data-name="@professor.Name @professor.LastName">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }

            <div class="row mt-4">
                <div class="col-12 d-flex justify-content-between align-items-center">
                    <span class="text-muted">
                        Página @Model.PageIndex de @Model.TotalPages
                    </span>

                    <div>
                        <a asp-action="Professors"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           class="btn btn-sm btn-outline-secondary @prevDisabled">
                            Anterior
                        </a>

                        <a asp-action="Professors"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           class="btn btn-sm btn-outline-secondary @nextDisabled">
                            Siguiente
                        </a>
                    </div>
                </div>
            </div>

            <!-- Mensaje cuando no hay profesores -->
            @if (!Model.Any())
            {
                <div id="noProfessorsMessage" class="text-center py-5">
                    <i class="bi bi-person-video3 display-1 text-muted"></i>
                    <h3 class="mt-3 text-muted">No hay profesores registrados</h3>
                    <p class="text-muted">Comienza agregando el primer profesor al sistema.</p>
                    <button class="btn btn-primary-custom mt-3" data-bs-toggle="modal" data-bs-target="#professorModal">
                        <i class="bi bi-person-plus-fill"></i> Agregar Primer Profesor
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<!-- ======================== MODAL PARA CREAR PROFESOR ======================== -->
<div class="modal fade" id="professorModal" tabindex="-1" aria-labelledby="professorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="professorModalLabel">
                    <i class="bi bi-person-plus-fill"></i> Nuevo Profesor
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="professorForm" asp-controller="Professors" asp-action="CreateProfessor" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="row">
                        <!-- Información Personal -->
                        <div class="col-md-6">
                            <h6 class="section-title mb-3">
                                <i class="bi bi-person-badge"></i> Información Personal
                            </h6>

                            <div class="mb-3">
                                <label for="Code" class="form-label required-field">Código del Profesor</label>
                                <input type="text" class="form-control" id="Code" name="Code" required maxlength="20">
                                <div class="form-text">Código único identificador del profesor</div>
                            </div>

                            <div class="mb-3">
                                <label for="Name" class="form-label required-field">Nombres</label>
                                <input type="text" class="form-control" id="Name" name="Name" required maxlength="50">
                            </div>

                            <div class="mb-3">
                                <label for="LastName" class="form-label required-field">Apellidos</label>
                                <input type="text" class="form-control" id="LastName" name="LastName" required maxlength="50">
                            </div>

                            <div class="mb-3">
                                <label for="Email" class="form-label required-field">Correo Electrónico</label>
                                <input type="email" class="form-control" id="Email" name="Email" required maxlength="100">
                            </div>
                        </div>

                        <!-- Información de Contacto y Laboral -->
                        <div class="col-md-6">
                            <h6 class="section-title mb-3">
                                <i class="bi bi-telephone"></i> Información de Contacto
                            </h6>

                            <div class="mb-3">
                                <label for="Phone" class="form-label required-field">Teléfono</label>
                                <input type="tel" class="form-control" id="Phone" name="Phone" required maxlength="15">
                            </div>

                            <div class="mb-3">
                                <label for="Department" class="form-label required-field">Departamento</label>
                                <input type="text" class="form-control" id="Department" name="Department" required maxlength="100">
                                <div class="form-text">Ej: Matemáticas, Ciencias, Idiomas</div>
                            </div>

                            <h6 class="section-title mb-3 mt-4">
                                <i class="bi bi-calendar-check"></i> Información Laboral
                            </h6>

                            <div class="mb-3">
                                <label for="HiringDate" class="form-label required-field">Fecha de Contratación</label>
                                <input type="date" class="form-control" id="HiringDate" name="HiringDate" required>
                            </div>

                            <div class="mb-3 form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="IsActive" name="IsActive" value="true" checked>
                                <label class="form-check-label" for="IsActive">Profesor Activo</label>
                                <input type="hidden" name="IsActive" value="false">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Guardar Profesor
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- ======================== MODAL PARA EDITAR PROFESOR ======================== -->
<div class="modal fade" id="editProfessorModal" tabindex="-1" aria-labelledby="editProfessorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="editProfessorModalLabel">
                    <i class="bi bi-pencil-fill"></i> Editar Profesor
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editProfessorForm" asp-controller="Professors" asp-action="UpdateProfessor" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="EditProfessorId" name="ProfessorId" value="0" />
                <input type="hidden" id="EditCodeHidden" name="Code" value="" />
                <input type="hidden" id="EditNameHidden" name="Name" value="" />
                <input type="hidden" id="EditLastNameHidden" name="LastName" value="" />
                <input type="hidden" id="EditEmailHidden" name="Email" value="" />
                <input type="hidden" id="EditHiringDateHidden" name="HiringDate" value="" />

                <div class="modal-body">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle-fill"></i>
                        <strong>Modo Edición:</strong> Solo puedes modificar el <strong>teléfono</strong>, <strong>departamento</strong> y <strong>estado</strong> del profesor.
                    </div>

                    <div class="row">
                        <!-- Información Personal (SOLO LECTURA) -->
                        <div class="col-md-6">
                            <h6 class="section-title mb-3">
                                <i class="bi bi-person-badge"></i> Información Personal
                            </h6>

                            <div class="mb-3">
                                <label class="form-label">Código del Profesor</label>
                                <input type="text" class="form-control bg-light" id="EditCode" readonly>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Nombres</label>
                                <input type="text" class="form-control bg-light" id="EditName" readonly>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Apellidos</label>
                                <input type="text" class="form-control bg-light" id="EditLastName" readonly>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Correo Electrónico</label>
                                <input type="email" class="form-control bg-light" id="EditEmail" readonly>
                            </div>
                        </div>

                        <!-- Información de Contacto (EDITABLE) -->
                        <div class="col-md-6">
                            <h6 class="section-title mb-3">
                                <i class="bi bi-telephone"></i> Información de Contacto
                            </h6>

                            <div class="mb-3">
                                <label for="EditPhone" class="form-label required-field">
                                    <i class="bi bi-pencil-fill text-primary"></i> Teléfono
                                </label>
                                <input type="tel" class="form-control border-primary border-2" id="EditPhone" name="Phone" required maxlength="15">
                                <div class="form-text text-primary">
                                    <strong>Este campo es editable</strong>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="EditDepartment" class="form-label required-field">
                                    <i class="bi bi-pencil-fill text-primary"></i> Departamento
                                </label>
                                <input type="text" class="form-control border-primary border-2" id="EditDepartment" name="Department" required maxlength="100">
                                <div class="form-text text-primary">
                                    <strong>Este campo es editable</strong>
                                </div>
                            </div>

                            <h6 class="section-title mb-3 mt-4">
                                <i class="bi bi-calendar-check"></i> Información Laboral
                            </h6>

                            <div class="mb-3">
                                <label class="form-label">Fecha de Contratación</label>
                                <input type="date" class="form-control bg-light" id="EditHiringDate" readonly>
                            </div>

                            <div class="mb-3 form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="EditIsActive" name="IsActive" value="true">
                                <label class="form-check-label" for="EditIsActive">
                                    <i class="bi bi-pencil-fill text-primary"></i> <strong>Profesor Activo</strong>
                                </label>
                                <input type="hidden" name="IsActive" value="false">
                                <div class="form-text text-primary">
                                    <strong>Este campo es editable</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-lg"></i> Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Actualizar Profesor
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de Confirmación para Eliminar -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="deleteForm" asp-controller="Professors" asp-action="DeleteProfessor" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas <strong>desactivar</strong> al profesor:</p>
                    <p class="text-center">
                        <strong class="fs-5" id="professorNameToDelete"></strong>
                    </p>
                    <input type="hidden" id="deleteProfessorId" name="id" value="">
                    <div class="alert alert-warning">
                        <i class="bi bi-info-circle"></i>
                        <small>El profesor será marcado como <strong>inactivo</strong> pero sus datos se conservarán en el sistema.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-lg"></i> Cancelar
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-check-lg"></i> Sí, Desactivar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/professors.js"></script>
}
